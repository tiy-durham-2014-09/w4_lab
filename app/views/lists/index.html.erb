<div class="row">
  <div class="large-10 large-push-2 columns">
<h1>ToDo Lists:</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @lists.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td><%= list.description %></td>
        <td class="button small radius round"><%= link_to "Show Todos", list_items_path(list)%></td>
        <td class="button small radius round"><%= link_to 'Edit', edit_list_path(list) %></td>
        <td class="button small alert radius round"><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<p><%= link_to 'New List', new_list_path %></p>
  </div>
</div>
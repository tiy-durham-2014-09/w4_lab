<h1>Global Feed (Not Logged In)</h1>

<%= link_to 'Sign Up', new_user_path %>

<% @posts.reverse_order.each do |post| %>

    <div class="post">
      <%= link_to post.user.name, profile_path(post.user) %>
      <%= link_to '@' + post.user.handle, profile_path(post.user) %>
      - <%= time_ago_in_words(post.created_at) %>
      <p><%= post.message %></p>
    </div>

  <% end %>

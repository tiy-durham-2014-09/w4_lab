<span class="plus"> + </span></h1>

<div class="posts"
<table class="fronttable">
	<tbody>
		<% @posts.order(published_date: :desc).each do |post| %>
		<tr>
			<td>
				<h3> <%= link_to post.title, post %></h3>
				<p> <strong><%= post.author %></strong> <%= post.published_date %></p>
				<p> <%= markdown(post.body) %> </p>
				<p> <%= link_to 'Read', post %></p>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>

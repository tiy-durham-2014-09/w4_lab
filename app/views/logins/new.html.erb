<div class="row">
    <%= form_tag login_path, :method => :post do %>
        <%= label_tag :email %>
        <%= text_field_tag :email %>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
        <%= button_tag "Login", :class => "small radius" %>
    <% end %>
</div>

<%= render "users/form" %>

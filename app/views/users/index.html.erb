<h1>Listing Users</h1>

<table class="usertable">
  <thead>
    <tr>
      <th class="tusername">Name</th>
      <th class="tuserpic">Picture</th>
      <th class="tuseremail">Email</th>
      <th class="tuserjoin">Joined</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.order(name: :asc).each do |user| %>
    <tr>
      <td class="tusername"><%= link_to user.name, user %></td>
      <td class="tuserpic"><%= image_tag user.avatar.url(:thumb) %></td>
      <td class="tuseremail"><%= user.email %></td>
      <td class="tuserjoin"><%= user.created_at %></td>
      <td><%= link_to 'Show User', user %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

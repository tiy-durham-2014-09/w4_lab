<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% @user.lists.each do |list| %>
  <%= list %>
  <table>
    <thead>
      <tr>
        <th>Item</th>
        <th>Note</th>
        <th>Date</th>
        <th>Complete</th>
        <th>List</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% list.todos.each do |todo| %>
      <tr>
          <td><%=	todo.item  %></td>
          <td><%= todo.note  %></td>
          <td><%=	todo.date  %></td>
          <td><%=	todo.complete  %></td>
      </tr>
      <%  end %>
    </tbody>
  </table>

  <br>

<% end %>

<%= link_to 'Edit', edit_user_path() %>

<p id="notice"><%= notice %></p>

<br>

<% @user.lists.each do |list| %>
  <%= list %>
  <table class="large-12 columns">
    <thead>
      <tr>
        <th>Item</th>
        <th>Note</th>
        <th>Date</th>r
        <th>Complete?</th>
      </tr>
    </thead>
    <tbody>
      <% list.todos.each do |todo| %>
          <% if todo.date.past? %>
            <% c = "overdue" %>
          <% else %>
            <% c = "ignore" %>
          <% end %>
          <% unless todo.complete %>

          <tr>
              <td class="editable_textarea"  id="<%= c %>"><%=	todo.item  %></td>
              <td class="editable_textarea"  id="<%= c %>"><%= todo.note  %></td>
              <td class="editable_textarea" id="<%= c %>"><%=	todo.date  %></td>
              <td>
                <%= form_for todo do |f| %>
                  <%= f.check_box :complete %>
                  <%= f.submit %>
                  <% end %>
                </form>
              </td>
          </tr>
        <% end %>
      <%  end %>
    </tbody>
  </table>

  <br>

<% end %>

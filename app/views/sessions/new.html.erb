<% provide(:title, "Sign in") %>
<div class="row">
  <h1 class="large-12 columns">Sign In</h1>

  <p>Not a member? <%= link_to "Sign up now!", new_user_path %></p>

  <div class="roww">
    <div class="span6 offset3">
      <%= form_for(:session, url: session_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<%= form_for(@post) do |f| %>
<% if @post.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
  <ul>
    <% @post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="row">
<div class="small-12 columns">
  <div class="field">
    <%= f.label :title, nil, class: 'post_label' %><br>
    <%= f.text_field :title %>
  </div>
</div>
</div>
<div class="large-12 columns">
  <div class="field">
    <%= f.label :body, nil, class: 'post_label' %><br>
    <%= f.text_area :body %>
  </div>
</div>
<div class="row">
  <div class="small-6 columns">
    <div class="field">
      <%= f.label :published_date, nil, class: 'post_label' %><br>
      <%= f.date_select :published_date %>
    </div>
  </div>
</div>
<div class="actions">
<%= f.button :submit, class: "radius small" %>
</div>
<% end %>

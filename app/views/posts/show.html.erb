<h4><%= @post.title %></h4>
<h5><strong>Author:</strong></h5>
<p class="author"><%= @post.user %></p>
<%= markdown(@post.body) %>
</p>
<h5>Published <%= time_ago_in_words @post.published_date %> ago</h5>
<p class="post_display">
  <h6>Comments</h6>
  <% @post.comments.each do |comment| %>
  <strong><h3>Comment:</h3></strong>
  <%= comment.body %>
  <% end %><br><br>
  <strong><h3><p class="comment">Add a comment:</p></h3></strong>
      <%= form_for ([@post, @post.comments.build]) do |f| %>
    <div class="row">
    <div class="small-12 columns">
      <%= f.text_area :body, class: 'field_label' %><br>
      <div class="actions">
        <%= f.button :submit, class: "radius small" %> <br>
          <% if current_user.posts.include?(@post) %>
            <%= link_to 'Edit', edit_post_path(@post), :class => 'small_label' %>
          <% end %>
      </div>
    </div>
    </div>
<% end %>

<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Message</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
      <tr>
      <div class="post">
        <%= link_to post.user.name, profile_path(post.user) %>
        <%= link_to '@' + post.user.handle, profile_path(post.user) %>
        - <%= time_ago_in_words(post.created_at) %>
        <p><%= post.message %></p>
      </div>
      <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

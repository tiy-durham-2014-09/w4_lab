<h1>Your Posts</h1>
<%= link_to 'Create New Post', new_post_path %>
<table>
  <thead>
    <tr>
      <th class="mythead">Title</th>
      <th class="mydhead">Published Date</th>
      <th class="mychead">Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts1.order(published_date: :desc).each do |post| %>
      <tr>
        <td class="mytitle"><%= link_to post.title, post %></td>
        <td class="mydate"><%= post.published_date %></td>
        <td class="mycontent"><%= post.content %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<h1>Your Comments</h1>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <% if comment.commenter == current_user.name %>
        <td><%= link_to comment.post.title, comment.post %></h5>
        <td><%= comment.body %></p>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
